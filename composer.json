{
    "name": "hillpy/mini-program-sdk",
    "description": "MiniProgramSDK是一个PHP的小程序开发包。封装微信小程序后端相关接口，比如解密信息（用户信息、手机号）、获取小程序码等。",
    "keywords": ["小程序", "miniprogram", "微信", "wechat"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "shinn_lancelot",
            "email": "lanhaichun0317@gmail.com",
            "homepage": "https://hillpy.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "support": {
        "issues": "https://github.com/hillpy/MiniProgramSDK/issues"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Hillpy\\MiniProgramSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer test",
                "composer check-style"
            ],
            "pre-push": [
                "composer test",
                "composer check-style"
            ],
            "post-merge": "composer install"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update",
            "@php -r \"file_exists('tests/Env.php') || copy('tests/EnvExample.php', 'tests/Env.php');\""
        ],
        "post-update-cmd": [
            "cghooks update"
        ],
        "cghooks": "cghooks",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": [
            "phpunit tests --colors=always"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
